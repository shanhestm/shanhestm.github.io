        left: &#39;3%&#39;,
        right: &#39;4%&#39;,
        bottom: &#39;3%&#39;,
        containLabel: true
    },
    xAxis : [
        {
            type : &#39;value&#39;
        }
    ],
    yAxis : [
        {
            type : &#39;category&#39;,
            axisTick : {show: false},
            data : [&#39;周一&#39;,&#39;周二&#39;,&#39;周三&#39;,&#39;周四&#39;,&#39;周五&#39;,&#39;周六&#39;,&#39;周日&#39;]
        }
    ],
    series : [
        {
            name:&#39;利润&#39;,
            type:&#39;bar&#39;,
            itemStyle : {
                normal: {
                    label: {show: true, position: &#39;inside&#39;}
                }
            },
            data:[200, 170, 240, 244, 200, 220, 210]
        },
        {
            name:&#39;收入&#39;,
            type:&#39;bar&#39;,
            stack: &#39;总量&#39;,
            itemStyle: {
                normal: {
                    label : {show: true}
                }
            },
            data:[320, 302, 341, 374, 390, 450, 420]
        },
        {
            name:&#39;支出&#39;,
            type:&#39;bar&#39;,
            stack: &#39;总量&#39;,
            itemStyle: {normal: {
                label : {show: true, position: &#39;left&#39;}
            }},
            data:[-120, -132, -101, -134, -190, -230, -210]
        }
    ]
};

        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
&lt;/script&gt;</content>
    
