        var myChart = echarts.init(document.getElementById(&#39;echarts6001&#39;));

        // 指定图表的配置项和数据
        var option = {
    tooltip : {
        trigger: &#39;axis&#39;,
        axisPointer : {            // 坐标轴指示器，坐标轴触发有效
